<section id="temaCadastroJogo"></section>
<div class="container" id='containerTema'>
    <div class="text-right">
    <button type="submit" id='btnAltTema'>Alterar Tema</button>
    </div>
    <div class="row">
        <div class="col-12" id='areaCentralJogo'>
            <h1 id='cadJogoH1'>Cadastro Jogo</h1>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-8" id='areaCinzaFormJogo'>
                    <form>
                        <div class="row">
                            <div class="col-1"></div>
                            <div class="col-10" id='areaCentralFormJogo'>
                                <h2>Informações Básicas</h2>

                                <div class="form-group pt-3">
                                    <label for="nomeJogo">Nome</label>
                                    <input type="text" class="form-control" id="nomeJogo" name="nomeJogo" required>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="anoJogo">Ano</label>
                                            <select class="form-control" id="anoJogo">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="faixaEtaria">Faixa Etária</label>
                                            <select class="form-control" id="faixaEtaria">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-7">
                                        <div class="form-group">
                                            <label for="duracao">Duração</label>
                                            <input type="number" class="form-control" id="duracao" name="duracao"
                                                required>
                                        </div>
                                    </div>
                                    <div class="col-5 nopadding">
                                        <br>
                                        <br>
                                        minutos
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="descricaoJogo">Descrição</label>
                                    <textarea style="resize: none" class="form-control" id="descricaoJogo"
                                        rows="4"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="temaJogo">Tema</label>
                                    <select class="form-control" id="temaJogo">
                                        <option>Aventura</option>
                                        <option>Civilização</option>
                                        <option>Cultura Oriental</option>
                                        <option>Cultura Pop</option>
                                        <option>Fantasia</option>
                                        <option>Faroeste</option>
                                        <option>Ficção Científica</option>
                                        <option>Guerra</option>
                                        <option>História</option>
                                        <option>Horror</option>
                                        <option>Medieval</option>
                                        <option>Mitologia</option>
                                        <option>Luta</option>
                                        <option>Policial</option>
                                        <option>Política</option>
                                    </select>
                                </div>
                                <div class="col-1"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-1"></div>
                            <div class="col-10" id='areaCentralFormJogo2'>
                                <p>
                                    <button class="btn btn-lg btn-block mycolorbutton" type="button"
                                        data-toggle="collapse" data-target="#collapseExample" aria-expanded="false"
                                        aria-controls="collapseExample">
                                        Quantidade Jogadores
                                    </button>
                                </p>
                                <div class="collapse" id="collapseExample">
                                    <div class="card card-body cardQtdJogadores">
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="form-group pt-3">
                                                    <label for="minJogadores">Mínimo</label>
                                                    <input type="number" class="form-control" id="minJogadores"
                                                        name="minJogadores" required>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-group pt-3">
                                                    <label for="maxJogadores">Máximo</label>
                                                    <input type="number" class="form-control" id="maxJogadores"
                                                        name="maxJogadores" required>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="col-1"></div>
                        </div>

                        <div class="row">
                            <div class="col-1"></div>
                            <div class="col-10" id='areaCentralFormJogo2'>
                                <p>
                                    <button class="btn btn-lg btn-block mycolorbutton" type="button"
                                        data-toggle="collapse" data-target="#collapseExample2" aria-expanded="false"
                                        aria-controls="collapseExample">
                                        Características do Jogo
                                    </button>
                                </p>
                                <div class="collapse" id="collapseExample2">
                                    <div class="card card-body cardCarJogo">
                                        <div class="form-group pt-3">
                                            <label for="pesoJogo">Peso (Dificuldade)</label>
                                            <select class="form-control" id="pesoJogo">
                                                <option>Leve</option>
                                                <option>Médio-Leve</option>
                                                <option>Médio</option>
                                                <option>Médio-Pesado</option>
                                                <option>Pesado</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="dominioJogo">Domínio (Categoria)</label>
                                            <select class="form-control" id="dominioJogo">
                                                <option>Jogos 4X</option>
                                                <option>Jogos Abstratos</option>
                                                <option>Jogos Colecionáveis</option>
                                                <option>Jogos Cooperativos</option>
                                                <option>Jogos de Cartas</option>
                                                <option>Jogos de Guerra</option>
                                                <option>Jogos de Miniaturas</option>
                                                <option>Jogos em Tempo Real</option>
                                                <option>Jogos Estratégicos</option>
                                                <option>Jogos Expert</option>
                                                <option>Jogos Familiares</option>
                                                <option>Jogos Festivos</option>
                                                <option>Jogos Legacy</option>
                                                <option>Jogos Temáticos</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="mecanicaJogo">Mecânica</label>
                                            <select class="form-control" id="mecanicaJogo">
                                                <option>Coleção de Componentes</option>
                                                <option>Colecionar Cartas</option>
                                                <option>Compra de Cartas</option>
                                                <option>Construção de Baralho</option>
                                                <option>Controle de Área</option>
                                                <option>Rolagem de Dados</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="downtimeJogo">Downtime</label>
                                            <select class="form-control" id="downtimeJogo">
                                                <option>Baixo</option>
                                                <option>Médio</option>
                                                <option>Alto</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-1"></div>
                        </div>

                        <div class="row">
                            <div class="col-1"></div>
                            <div class="col-10" id='areaCentralFormJogo2'>
                                <p>
                                    <button class="btn btn-lg btn-block mycolorbutton" type="button"
                                        data-toggle="collapse" data-target="#collapseExample3" aria-expanded="false"
                                        aria-controls="collapseExample">
                                        Informações Complementares
                                    </button>
                                </p>
                                <div class="collapse" id="collapseExample3">
                                    <div class="card card-body cardCompJogo">
                                        <div class="form-group pt-3">
                                            <label for="tutorialJogo">Tutorial</label>
                                            <textarea style="resize: none" class="form-control" id="tutorialJogo"
                                                rows="4"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label for="regrasJogo">Regras</label>
                                            <textarea style="resize: none" class="form-control" id="regrasJogo"
                                                rows="4"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-1"></div>
                        </div>

                </div>
                <div class="col-3" id="addImg">
                    <div class="row">
                        <div class="col-12 text-center">
                            <div>Foto Perfil Jogo</div>
                            <br>
                            <div class="image-upload">
                                <label for="file-input">
                                    <img src="/images/default/uploadphoto.svg" width="50%" alt="Botão Adicionar Foto Perfil Jogo" title="Clique para adionar a foto do perfil do jogo"/>
                                </label>
                                <input id="file-input" type="file" />
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 pt-5 text-center">
                    <button type="submit" id='botaoCadastrar'>Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>


<script>
    let date = new Date();
    let min = 1900,
        max = date.getFullYear(),
        select = document.getElementById('anoJogo');

    for (let i = min; i <= max; i++) {
        let opt = document.createElement('option');
        opt.value = i;
        opt.innerHTML = i;
        select.appendChild(opt);
    }

    select.value = new Date().getFullYear();

    let min2 = 0,
        max2 = 18,
        select2 = document.getElementById('faixaEtaria');

    for (let i = min2; i <= max2; i++) {
        let opt = document.createElement('option');
        opt.value = i;
        opt.innerHTML = i;
        select2.appendChild(opt);
    }
</script>


